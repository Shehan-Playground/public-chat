          <TableColumn prefWidth="75.0" text="Name" />
          <TableColumn prefWidth="285.0" text="Message" />
        </columns>
      </TableView>
      <Label layoutX="35.0" layoutY="518.0" text="Message :">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Button fx:id="btnSend" layoutX="428.0" layoutY="544.0" mnemonicParsing="false" onAction="#btnSendOnAction" prefHeight="43.0" prefWidth="106.0" style="-fx-background-color: lightblue;" text="Send" />
